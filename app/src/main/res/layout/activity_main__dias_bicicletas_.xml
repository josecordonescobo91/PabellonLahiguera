<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cesped"
    android:orientation="vertical"
    tools:context=".Main_DiasBicicletas_Activity">


    <Button
        android:id="@+id/btnLunes"
        android:onClick="Lunes"
        android:text="LUNES"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="318dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        android:background="#1976d2"
        android:textColor="#FFF"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btnMiercoles"
        android:onClick="Miercoles"
        android:text="MIERCOLES"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="318dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        android:background="#1976d2"
        android:textColor="#FFF"
        android:textSize="14sp"/>

    <Button
        android:id="@+id/btnViernes"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        android:background="#1976d2"
        android:onClick="Viernes"
        android:text="VIERNES"
        android:textColor="#FFF"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="318dp" />

</LinearLayout>

