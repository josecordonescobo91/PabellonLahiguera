
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Main_Administradores_Activity">

        <TabHost
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/tabHost"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="fill_parent"
                    android:layout_height="56dp"></TabWidget>

                <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="fill_parent"
                    android:layout_height="618dp">

                    <LinearLayout
                        android:id="@+id/CREAR"
                        android:layout_width="fill_parent"
                        android:layout_height="600dp"
                        android:orientation="vertical">

                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="474dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <EditText
                                    android:id="@+id/nick"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="2dp"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginEnd="8dp"
                                    android:ems="100"
                                    android:gravity="center"
                                    android:hint="NICK"
                                    android:inputType="textPersonName"
                                    android:paddingLeft="5dp" />

                                <EditText
                                    android:id="@+id/pass"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="2dp"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginEnd="8dp"
                                    android:ems="100"
                                    android:gravity="center"
                                    android:hint="CONTRASEÃ‘A"
                                    android:inputType="textPassword"
                                    android:paddingLeft="5dp" />

                                <EditText
                                    android:id="@+id/nombre"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="2dp"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginEnd="8dp"
                                    android:ems="100"
                                    android:gravity="center"
                                    android:hint="NOMBRE"
                                    android:inputType="textPersonName"
                                    android:paddingLeft="5dp" />

                                <EditText
                                    android:id="@+id/apellido1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="2dp"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginEnd="8dp"
                                    android:ems="100"
                                    android:gravity="center"
                                    android:hint="PRIMER APELLIDO"
                                    android:inputType="textPersonName"
                                    android:paddingLeft="5dp" />

                                <EditText
                                    android:id="@+id/apellido2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="2dp"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginEnd="8dp"
                                    android:ems="100"
                                    android:gravity="center"
                                    android:hint="SEGUNDO APELLIDO"
                                    android:inputType="textPersonName"
                                    android:paddingLeft="5dp" />

                                <EditText
                                    android:id="@+id/telefono"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="2dp"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginEnd="8dp"
                                    android:ems="100"
                                    android:gravity="center"
                                    android:hint="TELEFONO"
                                    android:inputType="phone"
                                    android:paddingLeft="5dp" />

                                <EditText
                                    android:id="@+id/email"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="2dp"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginEnd="8dp"
                                    android:ems="100"
                                    android:gravity="center"
                                    android:hint="CORREO"
                                    android:inputType="textEmailAddress"
                                    android:paddingLeft="5dp" />

                                <EditText
                                    android:id="@+id/direccion"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="2dp"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginEnd="8dp"
                                    android:ems="100"
                                    android:gravity="center"
                                    android:hint="DIRECCION"
                                    android:inputType="textPersonName"
                                    android:paddingLeft="5dp" />

                                <EditText
                                    android:id="@+id/localidad"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="2dp"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginEnd="8dp"
                                    android:ems="100"
                                    android:gravity="center"
                                    android:hint="LOCALIDAD"
                                    android:inputType="textPersonName"
                                    android:paddingLeft="5dp" />

                                <EditText
                                    android:id="@+id/provincia"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="2dp"
                                    android:ems="100"
                                    android:gravity="center"
                                    android:hint="PROVINCIA"
                                    android:inputType="textPersonName"
                                    android:paddingLeft="5dp" />

                                <Button
                                    android:id="@+id/btAgregar"
                                    android:layout_width="match_parent"
                                    android:layout_height="31dp"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginRight="15dp"
                                    android:background="#1976d2"
                                    android:text="REGISTRAR"
                                    android:textColor="#FFF"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </ScrollView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ADMINISTRADORES"
                        android:layout_width="fill_parent"
                        android:layout_height="614dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvNombre1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TextView"
                            android:visibility="invisible"
                            tools:visibility="invisible" />

                        <TextView
                            android:id="@+id/textView14"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="     TELEFONO               ACTIVO     NICK"
                            android:textColor="#3F51B5"
                            android:textStyle="bold" />

                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="528dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ListView
                                    android:id="@+id/lvAdministradores"
                                    android:layout_width="match_parent"
                                    android:layout_height="521dp" />
                            </LinearLayout>
                        </ScrollView>
                    </LinearLayout>

                </FrameLayout>
            </LinearLayout>
        </TabHost>
    </RelativeLayout>