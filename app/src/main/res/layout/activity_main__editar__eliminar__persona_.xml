<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Main_Editar_Eliminar_Persona_Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvSpinerActivo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:visibility="invisible"
                tools:visibility="invisible" />

            <TextView
                android:id="@+id/tvIDUSUARIO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:visibility="invisible" />


            <TextView
                android:id="@+id/tvNick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="NICK"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edNick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:enabled="false"
                android:gravity="center"
                android:text="Name"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvNombre1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="NOMBRE"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:enabled="false"
                android:gravity="center"
                android:text="Name"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvFecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="PRIMER APELLIDO"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edFecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:enabled="false"
                android:gravity="center"
                android:text="Name"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvHora"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="SEGUNDO APELLIDO"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edHora"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:enabled="false"
                android:gravity="center"
                android:text="Name"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvTelefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="TELEFONO"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edTelefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:enabled="false"
                android:gravity="center"
                android:text="Name"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="CORREO"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:enabled="false"
                android:gravity="center"
                android:text="Name"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvDireccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="DIRECCION"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edDireccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:enabled="false"
                android:gravity="center"
                android:text="Name"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvLocalidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="LOCALIDAD"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edLocalidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:enabled="false"
                android:gravity="center"
                android:text="Name"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvProvincia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="PROVINCIA"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edProvincia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:enabled="false"
                android:gravity="center"
                android:text="Name"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvDevuelto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="ACTIVO"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spDevuelo"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:gravity="right"
                android:padding="12dp"
                android:textAlignment="gravity"
                android:verticalScrollbarPosition="left" />

            <Button
                android:id="@+id/btnEditarHorarioM"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:background="#1976d2"
                android:text="EDITAR"
                android:textColor="#FFF"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btnBorrar"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:background="#1976d2"
                android:textColor="#FFF"
                android:textSize="14sp"
                android:text="ELIMINAR" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
